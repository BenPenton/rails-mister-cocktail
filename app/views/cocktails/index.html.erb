<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do%>
        <div class="card col-xs-6" style='background-image: url(<%= cl_image_path("#{cocktail.photo}") %>)' >

          <h2><%= cocktail.name %> </h2>
        </div>
      <% end %>
    <% end %>




  </div>
    <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
